<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cbs_appv10">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash_removebg_preview"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_removebg_preview"
        android:supportsRtl="true"
        android:theme="@style/Theme.CBS_AppV10"
        tools:targetApi="31">
        <activity
            android:name=".Categorias_Activity"
            android:exported="false" />
        <activity
            android:name=".MostViewed_Activity"
            android:exported="false" />
        <activity
            android:name=".PaginaPrincipal_Activity"
            android:exported="false" />
        <activity
            android:name=".LoginRegistro_Activity"
            android:exported="false" />
        <activity
            android:name=".LoginIniciarSesion_Activity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>